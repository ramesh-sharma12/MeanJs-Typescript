{
    "version": "1.5.3",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
		"preserveConstEnums": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "emitError": false
    },
    "files": [
	    "./start.ts",
	    "./gulpFile.ts",
        "./app/app.ts",
		"./app/init.ts",
        "./app/components/about/index.ts",
        "./app/components/home/index.ts",
		"./app/components/moviestore/index.ts",
		"./app/components/moviestore/indexSpec.ts",
        "./app/components/moviestore/details.ts",
		"./app/services/proxyService.ts",
		"./server/controllers/movie.ts",
        "./server/data/initialData.ts",
		"./server/routes/index.ts",
		"./server/routes/movies.ts",
        "./server/services/movieService.ts",
		"./server/repository/base.ts",       
		"./server/repository/movie.ts",
		"./tests/config/karma.conf.ts",
		"./tests/config/test-main.ts", 
        "./typings/_custom.d.ts",
        "./typings/systemjs.d.ts",
        "./typings/angular2/angular2.d.ts",
		"./typings/firebase/firebase.d.ts",
		"./typings/q/q.d.ts",
		"./typings/express/express.d.ts",
		"./typings/mongodb/mongodb.d.ts",
		"./typings/node/node.d.ts",
		"./typings/serve-static/serve-static.d.ts",
		"./typings/jquery/jquery.d.ts",
        "./typings/angular2/router.d.ts",
        "./typings/es6-promise/es6-promise.d.ts",
        "./typings/rx/rx-lite.d.ts",
        "./typings/rx/rx.d.ts",
        "./typings/tsd.d.ts"
    ],
    "filesGlob": [
	    "./gulpFile.ts",   
	    "./start.ts",
        "./app/**/*.ts",
		"./app/**/**/*.ts",
		"./server/**/*.ts",
        "./typings/**/*.ts"
    ],
    "compileOnSave": false
}
